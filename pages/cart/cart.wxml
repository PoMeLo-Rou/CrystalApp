<view class="container">
  <block wx:if="{{cartList.length > 0}}">
    <view class="cart-list">
      <view class="cart-item" wx:for="{{cartList}}" wx:key="id">
        <view class="item-img" style="background: radial-gradient(circle at 30% 30%, #fff, {{item.previewColor}});"></view>
        
        <view class="item-info">
          <view class="info-top">
            <text class="item-title">定制手链 ({{item.beadCount}}颗)</text>
            <text class="item-time">{{item.time}}</text>
          </view>
          <view class="info-bottom">
            <text class="item-price">¥{{item.price}}</text>
            <view class="btn-del" bindtap="deleteItem" data-index="{{index}}">删除</view>
          </view>
        </view>
      </view>
    </view>
    
    <view class="footer-bar">
      <view class="total">
        <text>合计：</text>
        <text class="total-price">¥{{totalMoney}}</text>
      </view>
      <view class="btn-pay" bindtap="onPay">去结算</view>
    </view>
  </block>

  <view wx:else class="empty-state">
    <text>购物车空空如也</text>
    <button class="btn-go" bindtap="goShopping">去定制</button>
  </view>
</view>