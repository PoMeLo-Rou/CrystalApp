page { background-color: #f7f8fa; padding-bottom: 40rpx; }
.container { padding: 30rpx; }

/* Banner */
.banner {
  height: 300rpx;
  background-color: #333;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.banner-bg {
  position: absolute;
  right: -50rpx; top: -50rpx;
  width: 200rpx; height: 200rpx;
  background: #d4a373;
  border-radius: 50%;
  opacity: 0.2;
}
.banner-text { display: flex; flex-direction: column; z-index: 2; }
.title { font-size: 40rpx; color: #fff; font-weight: bold; margin-bottom: 10rpx; }
.subtitle { font-size: 24rpx; color: rgba(255,255,255,0.8); }

/* 入口卡片 */
.entry-card {
  height: 200rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}
.card-title { font-size: 36rpx; font-weight: bold; color: #333; display: block;}
.card-desc { font-size: 22rpx; color: #999; margin-top: 8rpx; display: block;}
.btn-go { 
  margin-top: 20rpx; 
  background: #333; color: #fff; 
  font-size: 20rpx; padding: 8rpx 20rpx; 
  border-radius: 30rpx; display: inline-block; 
}
.card-icon {
  width: 100rpx; height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* 推荐列表 */
.section-title { font-size: 30rpx; font-weight: bold; margin-bottom: 20rpx; }
.product-grid { display: flex; flex-wrap: wrap; justify-content: space-between; }
.product-item {
  width: 48%; background: #fff;
  border-radius: 16rpx;
  padding: 20rpx; box-sizing: border-box;
  margin-bottom: 20rpx;
  display: flex; flex-direction: column; align-items: center;
}
.p-img { width: 80rpx; height: 80rpx; border-radius: 50%; margin-bottom: 10rpx; }
.p-name { font-size: 26rpx; color: #333; }
.p-price { font-size: 24rpx; color: #d4a373; font-weight: bold; margin-top: 4rpx; }